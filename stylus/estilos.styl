/*
	Para compilar el archivo de estylus abrimos el Terminal y vamos
	a la carpeta en la cual esta uvicado el archivo .styl

	MacBook:stylus MacBook$ stylus -c -w -o css/ stylus/estilos.styl

		-c	comprimir
		-o	setear uvicacion del .css
		-w	watch (compilacion automatica)
*/

@import "normalize.styl"
@import "fonts.styl"

// Creacion de variables
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B

body
	font-family 'Varela Round', sans-serif
	font-size 16px		// 1em = 16px
	a
		text-decoration none
figure
	margin 0
img
	vertical-align top
// Buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -8px
	margin-left 11px
	position absolute
	top 50%
// OOCSS classes
.container
	font-size 0
	margin-top 1.4rem
	text-align center
.description
	margin-left 1em
	margin-right 1em
.actions
	//background rgba(0,0,0,.3)
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0
.action
	color white
	font-size 1.2em
	margin-right .5em
	// Pseudo-clase para el ultimo elemento
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.menu
	display none
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.progress
	margin 1em
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -3px
.name
	color gris_oscuro
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.header
	height 3.5em
	.title
			font-size 1.1em
			line-height 3.5em
			margin 0
			text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	// Pseudo-clase para los elementos pares
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0

.playing
	&.small
		width 20em


// Media Queries para responsive design
@media screen and (min-width:480px)
	body
		background red