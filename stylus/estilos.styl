/*
	Para compilar el archivo de estylus abrimos el Terminal y vamos
	a la carpeta del proyecto donde esta uvicada la carpeta que
	contiene el archivo .styl

	MacBook:MySfotipy MacBook$ stylus -c -w -o css/ stylus/estilos.styl

		-c	comprimir
		-o	setear uvicacion del .css
		-w	watch (compilacion automatica)

	El comando css/ indica al compilador que cargue el archivo .styl de
	la carpeta "stylus" y guarde el archivo resultante (.css) en la
	carpeta llamada "css". Esto permite mantener el directorio en orden
*/

@import "normalize.styl"
@import "fonts.styl"

// Creacion de variables
gris_oscuro = #333333
gris_claro = #818181
gris_mas_claro = #F0F0F0
rojo = #BD255B

body
	font-family 'Varela Round', sans-serif
	font-size 16px		// 1em = 16px
	a
		text-decoration none
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
// Buttons
.button-menu
	color gris_oscuro
	left .5em
	margin-top -8px
	margin-left 11px
	position absolute
	top 50%
// OOCSS classes
.container
	font-size 0
	margin-top 1.4rem
	text-align center
.description
	margin-left 1em
	margin-right 1em
.actions
	//background rgba(0,0,0,.3)
	background rgba(black,.3)
	bottom 0
	left 0
	position absolute
	right 0
.action
	color white
	font-size 1.2em
	margin-right .5em
	// Pseudo-clase para el ultimo elemento
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.menu
	display none
.relative
	position relative
.padding
	padding 1em
.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.wrap
	width 1000px
.round
	border-radius 50%
	overflow hidden
.progress
	margin 1em
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		width 30%
		position relative
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -3px
.name
	color gris_oscuro
.author
	color gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.right-text
	text-align right
.relative
	position relative
.header
	height 3.5em
	.title
			font-size 1.1em
			line-height 3.5em
			margin 0
			text-align center
.song
	display inline-block
	font-size 1rem
	margin-bottom 1em
	margin-right 1em
	text-align left
	width 8rem
	// Pseudo-clase para los elementos pares
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.playing
	&.small
		width 20em
		margin 0 auto
.playlist
	width 22em
	padding 0 2em
	display none
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 14px
.isotipo
	width 122px
.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	// pseudo-elemento para triangulo
	&:after
		// siempre hay que colocar content
		border-left 7px solid transparent
		border-right 7px solid transparent
		border-top 9px solid gris_claro
		content ""
		display inline-block
		margin-left .4em


// Media Query para Tablet
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto
	.input
		border 1px solid gris_claro
		height 2.5em
		border-radius 5px
		padding 0 1em 0 2em
	.search-icon
		position absolute
		left .5em
		top .8em
		color gris_claro
	.close-icon
		position absolute
		top .5em
		color gris_claro
		right .5em
		font-size 1.2em


// Media Query para Desktop
@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.menu
		display block
		overflow hidden
		background gris_mas_claro
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				cursor pointer
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	.header
		height auto
		border none
		.title
			display none
	.logo
	.playlist
		display block








